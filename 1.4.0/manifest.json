{
  "manifest_version": 3,
  "name": "ВД - Инструменты ПЛ",
  "description": "Содержит ряд инструментов, автоматизирующих процессы обработки обращений на ПЛ.",
  "version": "1.4",
  "author": "Владимир Филипкин",
  "permissions": [
    "tabs",
    "scripting"
  ],
  "optional_permissions": [
    "unlimitedStorage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "index.html",
    "default_title": "Click Me",
    "default_icon": "vd_logo_16.png"
  },
  "icons": {
    "16": "vd_logo_16.png",
    "48": "vd_logo_48.png",
    "128": "vd_logo_128.png"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+F",
        "mac": "MacCtrl+Shift+F"
      },
      "description": "Opens hello.html"
    }
  }
}

