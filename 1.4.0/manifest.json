{
  "manifest_version": 3,
  "version": "1.4",
  "name": "ВД - Инструменты ПЛ",
  "description": "Содержит ряд инструментов, автоматизирующих процессы обработки обращений на ПЛ.",
  "action": {
    "default_popup": "hello.html",
    "default_icon": "vd_logo_16.png"
  },
  "icons": {
    "16": "vd_logo_16.png",
    "48": "vd_logo_48.png",
    "128": "vd_logo_128.png"
  },
  "permissions": [
    "tabs", "storage", "scripting"
  ],
  "host_permissions": [
    "http://*/*", "https://*/*"
  ],

  "content_scripts": [
    {
      "js": ["script.js"],
      "matches": ["http://*/*", "https://*/*"]
    }
  ],
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+F",
        "mac": "MacCtrl+Shift+F"
      },
      "description": "Opens hello.html"
    }
  },
  "background": {
    "scripts": ["jquery.min.js", "background.js"]
  }
}
